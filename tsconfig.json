{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["vitest/globals"]
  },
  "include": [
    "**/*.ts",
    "**/*.html",
  ],
  "exclude": ["node_modules"]
}
